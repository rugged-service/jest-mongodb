{
  "name": "@shelf/jest-mongodb",
  "version": "1.1.4",
  "description": "Run your tests using Jest & MongoDB in Memory server",
  "keywords": [
    "jest",
    "jest environment",
    "jest preset",
    "mongodb",
    "mongodb local"
  ],
  "repository": "shelfio/jest-mongodb",
  "license": "MIT",
  "author": {
    "name": "Vlad Holubiev",
    "email": "vlad@shelf.io",
    "url": "shelf.io"
  },
  "scripts": {
    "lint": "eslint . --fix --ext .js,.json,.ts --quiet",
    "test": "jest",
    "test:replicaSet": "cross-env TEST_REPLICASET=true && jest",
    "test:all": "npm test && npm run test:replicaSet"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{html,json,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": "@shelf/prettier-config",
  "jest": {
    "preset": "./jest-preset.js"
  },
  "dependencies": {
    "cwd": "0.10.0",
    "debug": "4.1.1",
    "mongodb-memory-server": "6.6.1"
  },
  "devDependencies": {
    "@shelf/eslint-config": "0.16.0",
    "@shelf/prettier-config": "0.0.7",
    "cross-env": "^7.0.2",
    "eslint": "7.1.0",
    "husky": "4.2.5",
    "jest": "26.0.1",
    "lint-staged": "10.2.7",
    "mongodb": "3.5.7",
    "prettier": "2.0.5"
  },
  "peerDependencies": {
    "mongodb": "3.x.x"
  },
  "engines": {
    "node": ">=8"
  },
  "publishConfig": {
    "access": "public"
  }
}
